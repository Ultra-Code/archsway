# Btrfs needs rootflags=subvol=/ when used as the root filesystem
rw root=LABEL=ROOT resume=LABEL=SWAP zswap.enabled=0 module_blacklist=iTCO_wdt nowatchdog mitigations=off i915.mitigations=off i915.enable_guc=2 i915.enable_dc=4 i915.nuclear_pageflip=Y
