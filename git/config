[core]
        editor = nvim
[pull]
        rebase = true
[status]
        submodulesummary = true
[submodule]
        recurse = true
        update = rebase
[push]
        recurseSubmodules = check
[merge]
        tool = nvimdiff3
        conflictStyle = diff3
[mergetool]
        prompt = false
[diff]
        submodule = log
        colorMoved = zebra
[alias]
        p = push
        s = status -s
        cl = clone --recurse-submodules
        c = commit
        a = add
        pu = pull
        l = log --graph --oneline --decorate
        lp = log -p
        d = diff
        g = grep --recurse-submodules -I
        m = mv
        r = rm -r
        mu = submodule update --init --recursive
        mpu = submodule update --remote --rebase
        mlp = log --submodule -p
        sh = show
        lt = log --stat -1
[grep]
        column = true
        lineNumber = true
        extendedRegexp = true
