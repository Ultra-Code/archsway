alias ls=' ls --color -F'
alias lsh=' ls --hyperlink=auto'
alias l=' ls -Alh'
alias md=' mkdir -p'
alias rd=' rmdir -pv'
alias rm=' rm -rvI'
alias _='sudo'

alias N=' _ -E nnn'
alias ln=' ln -sriv'

alias cp=' cpg -gr'
alias mv=' mvg -g'

alias grep='grep --color'
alias egrep='grep -P' #USE grep in PCRE mode
alias sed="sed -E" #use sed with ERX mode

alias gcl=' git clone --recurse-submodules'
alias gs=' git status'
alias ga=' git add'
alias gp=' git push'
alias gpu=' git pull'
alias gc=' git commit'
alias gl=' git log --graph --oneline --decorate'
alias glp=' git log -p'
alias gd=' git diff'
alias gm=' git mv'
alias gr=' git rm -rvI'
alias gmu=' git submodule update --init --recursive'
alias gmpu=' git submodule update --remote' # --rebase'
alias gmlp=' git log -p --submodule'

# open ~/.zshrc in using the default editor specified in $EDITOR
alias ez=" $EDITOR $ZDOTDIR/.zshrc"

#edit ~/.zshenv
alias ee=" $EDITOR $ZDOTDIR/.zshenv"

#edit zprofile
alias ep=" $EDITOR $ZDOTDIR/.zprofile"

#edit ~/.zshenv
alias eh=" $EDITOR $ZDOTDIR/.zsh_history"

#edit ~/.zsh_aliases
alias ea=" $EDITOR $ZDOTDIR/.zsh_aliases"

#edit $XDG_CONFIG_HOME/sway/config
alias es=" $EDITOR $DOTFILES/archlinux/sway/config"
#Aptitude aliases
alias pmu=' _ pacman -Syu'
alias pmr=' _ pacman -Rsn'
alias pmp=' _ pacman -Rcuns'
alias pmi=' _ pacman -S'
alias pmii=' pacman -Qi'
alias pmis=' pacman -Qs'
alias pmss=' pacman -Ss'
alias pmsi=' pacman -Si'
alias pmid=' pacman -Qii'
alias pmsd=' pacman -Sii'
