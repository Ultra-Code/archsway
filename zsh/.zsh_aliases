alias ls=' ls --hyperlink --color=always --classify'
alias l=' exa --color=always --long --header --group --inode --links --extended --git --classify --all  --icons --ignore-glob=.git'
alias lr=' l --recurse'
alias -g tree=' exa --tree'
alias md=' mkdir --parents --verbose'
alias rd=' rmdir --parents --verbose'
alias rm=' rm --interactive=once --verbose --recursive'
alias _='sudo --preserve-env'

alias N=' _ nnn -aruS'
alias Vi=' _ vi'
alias lns=' ln --interactive --symbolic --relative --logical --verbose'
alias ln=' ln --interactive --logical --verbose'

alias cp=' cpg --progress-bar --interactive --dereference --recursive --update --verbose --reflink=auto --sparse=auto --archive'
alias mv=' mvg -g --interactive --update --verbose' #issue with --progress-bar in command report it

alias gcl=' git clone --recurse-submodules'
alias gs=' git status'
alias gsh=' git show'
alias ga=' git add'
alias gp=' git push'
alias gpu=' git pull'
alias gc=' git commit'
alias gl=' git log --graph --oneline --decorate'
alias glp=' git log -p'
alias gd=' git diff'
alias gg=' git grep'
alias gm=' git mv'
alias gr=' git rm -r'
alias gmu=' git submodule update --init --recursive'
alias gmpu=' git submodule update --remote' # --rebase'
alias gmlp=' git log -p --submodule'

#edit .zshrc using $EDITOR
alias ez=" $EDITOR $ZDOTDIR/.zshrc"

#edit ~/.zshenv
alias ee=" $EDITOR $ZDOTDIR/.zshenv"

#edit zprofile
alias ep=" $EDITOR $ZDOTDIR/.zprofile"

#edit ~/.zshenv
alias eh=" $EDITOR $ZDOTDIR/.zsh_history"

#edit ~/.zsh_aliases
alias ea=" $EDITOR $ZDOTDIR/.zsh_aliases"

#edit $XDG_CONFIG_HOME/sway/config
alias es=" $EDITOR $DOTFILES/archlinux/sway/config"

#Source changes in specified files into zsh
alias sz=" exec zsh"
alias se=" source $ZDOTDIR/.zshenv"
alias sp=" source $ZDOTDIR/.zprofile"

#Aptitude aliases
alias pmu=' _ pacman -Syu'
alias pmr=' _ pacman -Rsn'
alias pmi=' _ pacman -Sy'
alias pmp=' _ pacman -Rcunsv'
alias pmfi=' pacman -Slq | fzf --multi --preview "pacman -Si {1}" | xargs -ro sudo pacman -S'
alias pmfr='pacman -Qq | fzf --multi --preview "pacman -Qi {1}" | xargs -ro sudo pacman -Rns'
alias pmii=' pacman -Qii'
alias pmis=' pacman -Qs'
alias pmsi=' pacman -Sii'
alias pmss=' pacman -Ss'
alias pml=' pacman -Qe'
alias pmlf=' pacman -Ql'
alias pmly=' pacman -Qmq'
alias pmb=' pacman -Qo'
alias pmc=' _ pacman -Qdtq| _ pacman -Rsn -'
alias pmcc=' _ pacman -Sc'

#Nix aliases
alias nix-shell="nix-shell --command zsh"

#Cmake
alias cmgen=' cmake -DCMAKE_EXPORT_COMPILE_COMMANDS=ON'

#Clang
alias clf=" ln $DOTFILES/clang/.clang-* ."

alias cldb=' b -vn clean update |& compiledb'

#Systemd services
alias enabled_services=' systemctl list-unit-files --type=service --state=enabled'
alias running_services=' systemctl list-units  --type=service  --state=running'
alias all_services=' systemctl -at service'

# Changing/making/removing directory
alias -g ...='../..'
alias -g ....='../../..'
alias -g .....='../../../..'
alias -g ......='../../../../..'

alias -- -=' cd -'
alias d=' dirs -v'
for index ({0..9}) alias $index=" cd +${index}"; unset index

alias lb=" lsblk -oPATH,MOUNTPOINTS,LABEL,FSTYPE,SIZE,FSAVAIL,FSUSED,PARTUUID,MAJ:MIN"

alias help=run-help

alias du=' du -h -d 1'
