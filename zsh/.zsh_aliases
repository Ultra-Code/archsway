alias ls='ls --color -F'
alias ll='ls -Alh'
alias li='ll -i'
alias lr='ll -R'

alias grep='grep --color'
alias fgrep='fgrep --color'
alias egrep='egrep --color'

alias casm="nasm -f elf32"
alias lasm="ld -m elf_i386"

alias admin='tmux new -s admin -d -n ADMINISTRATOR \; new-window -d -n EDITOR \; new-window -d -n CONFIGURATOR\;'
alias dev='tmux new -s developer -n TESTING \; new-window -n DAEMON \; new-window -n DEVELOPER\; new-window -n DATABASE\;'

