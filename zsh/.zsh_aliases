alias ls='ls --color -F'
alias l='ls -Alh'
alias md='mkdir -p'
alias rd=rmdir
alias _='sudo'

alias grep='grep --color'
alias egrep='egrep --color'

alias casm="nasm -f elf32"
alias lasm="ld -m elf_i386"

#alias sv="source ~/.virtualevn/bin/activate"

alias gs='git status'
alias ga='git add'
alias gp='git push'
alias gpu='git pull'
alias gc='git commit'
alias gl='git log --graph --oneline --decorate'

# open ~/.zshrc in using the default editor specified in $EDITOR
alias ez="$EDITOR $ZDOTDIR/.zshrc"

# source ~/.zshrc
alias sz="source $ZDOTDIR/.zshrc"

#edit ~/.zshenv
alias ee="$EDITOR $ZDOTDIR/.zshenv"

#source ~/.zshenv
alias se="source $ZDOTDIR/.zshenv"

#edit ~/.zsh_aliases
alias ea="$EDITOR $ZDOTDIR/.zsh_aliases"

#source ~/.zsh_aliases
alias sa="source $ZDOTDIR/.zsh_aliases"

#Aptitude aliases
alias apu='sudo aptitude update'
alias apf='sudo aptitude full-upgrade'

#Cmake
alias cmgen='cmake -DCMAKE_EXPORT_COMPILE_COMMANDS=ON'

#Clang
alias clf='ln -s ~/.clang* .'

alias cldb='b -vn clean update |& compiledb'

#Systemd services
alias enabled_services='systemctl list-unit-files --type=service --state=enabled'
alias running_services='systemctl list-units  --type=service  --state=running'
alias all_services='systemctl -at service'

# Changing/making/removing directory
alias -g ...='../..'
alias -g ....='../../..'
alias -g .....='../../../..'
alias -g ......='../../../../..'

alias -- -='cd -'
alias 1='cd -'
alias 2='cd -2'
alias 3='cd -3'
alias 4='cd -4'
alias 5='cd -5'
alias 6='cd -6'
alias 7='cd -7'
alias 8='cd -8'
alias 9='cd -9'
