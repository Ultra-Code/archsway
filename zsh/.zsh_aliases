#Aptitude aliases
alias apu='sudo aptitude update'
alias aps='aptitude show'
alias apf='sudo aptitude full-upgrade'
alias api='sudo aptitude install'
alias apc='sudo aptitude autoclean'
alias app='sudo aptitude purge'
