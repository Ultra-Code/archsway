font-size = 16
mouse-hide-while-typing = true
background-opacity = 0.5
window-decoration = none
focus-follows-mouse = true
shell-integration-features = true

keybind = ctrl+left_bracket=text:\x1b
keybind = ctrl+shift+z=jump_to_prompt:-1
keybind = ctrl+shift+x=jump_to_prompt:+1
keybind = ctrl+shift+left_bracket=goto_split:previous
keybind = ctrl+shift+right_bracket=goto_split:next
keybind = ctrl+w=close_window
